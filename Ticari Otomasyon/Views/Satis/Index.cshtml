@using Ticari_Otomasyon.Models.Classes
@model List<SatisHareket>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br />
<table id="tbl1" class="table table-bordered" style="margin-top:20px;">
    <thead>
        <tr>

            <th>#</th>
            <th>Ürün</th>
            <th>Cari </th>
            <th>Personel</th>
            <th>Adet</th>
            <th>Fiyat</th>
            <th>Toplam</th>
            <th>Tarih</th>
            <th>Güncelle</th>
            <th>Detaylar</th>



        </tr>
    </thead>

    @foreach (var p in Model)
    {

        <tr>
            <th> @p.SatisId </th>
            <td> @p.Urun.Ad </td>
            <td> @p.Cari.Ad @p.Cari.Soyad</td>
            <td> @p.Personel.Ad @p.Personel.Soyad </td>
            <td> @p.Adet </td>
            <td> @p.Fiyat </td>
            <td> @p.ToplamTutar </td>
            <td> @p.Tarih </td>

            <td><a href="/Satis/SatisGetir/@p.SatisId" class="btn btn-warning">Güncelle</a></td>
            <td><a href="/Satis/SatisDetay/@p.SatisId" class="btn  btn-primary">Detaylar</a></td>


        </tr>
    }
</table>
<a href="/Satis/YeniSatis/" class="btn btn-dark">Yeni Satış Yap</a>

