@model Ticari_Otomasyon.Models.Classes.Cari

@using (Html.BeginForm("CariBilgiGuncelle","CariPanel",FormMethod.Post)) { 
<form class="form-horizontal">
    @Html.HiddenFor(x=>x.Id)
    <div class="form-group row">

        <label for="inputName" class="col-sm-2 col-form-label">Ad</label>

        <div class="col-sm-10">

          @Html.TextBoxFor(x=>x.Ad,new { @class = "form-control" })

        </div>

    </div>

    <div class="form-group row">

        <label for="inputEmail" class="col-sm-2 col-form-label">Soyad</label>

        <div class="col-sm-10">

            @Html.TextBoxFor(x=>x.Soyad,new { @class = "form-control" })

        </div>

    </div>

    <div class="form-group row">

        <label for="inputName2" class="col-sm-2 col-form-label">Mail</label>

        <div class="col-sm-10">

           @Html.TextBoxFor(x=>x.Mail,new { @class = "form-control" })

        </div>

    </div>

    <div class="form-group row">

        <label for="inputExperience" class="col-sm-2 col-form-label">Şehir</label>

        <div class="col-sm-10">

            @Html.TextBoxFor(x=>x.Sehir,new { @class = "form-control" })

        </div>

    </div>

    <div class="form-group row">

        <label for="inputSkills" class="col-sm-2 col-form-label">Şifre</label>

        <div class="col-sm-10">

            @Html.TextBoxFor(x=>x.Sifre,new { @class = "form-control" })

        </div>

    </div>

    <div class="form-group row">

        <div class="offset-sm-2 col-sm-10">

            <div class="checkbox">

                <label>

                    <input type="checkbox">Şifremi değiştirmek istiyorum. <a href="#"></a>

                </label>

            </div>

        </div>

    </div>

    <div class="form-group row">

        <div class="offset-sm-2 col-sm-10">

            <button type="submit" class="btn btn-danger">Güncelle</button>

        </div>

    </div>

</form>
}