@model IEnumerable<Ticari_Otomasyon.Models.Classes.SinifGrup3>

<div class="card-body p-0">
    <table class="table table-striped">
        <thead>
            <tr>
                <th style="width: 10px">#</th>
                <th>Marka</th>
                <th>Progress Bar</th>
                <th style="width: 40px">Toplam</th>
            </tr>
        </thead>
        <tbody>
            @{ int sirano = 0; }
            @foreach (var x in Model)
            {
                <tr>
                    <td>@{sirano++;} @sirano</td>
                    <td>@x.marka </td>
                    <td>
                        @if (x.sayi == 1)
                        {
                            <div class="progress progress-xs">
                                <div class="progress-bar progress-bar-danger" style="width: 55%"></div>
                            </div>

                        }
                        @if (x.sayi >= 2 && x.sayi <= 6)
                        {
                            <div class="progress progress-xs">
                                <div class="progress-bar bg-warning" style="width: 70%"></div>
                            </div>

                        }
                        @if (x.sayi >= 7)
                        {
                            <div class="progress progress-xs">
                                <div class="progress-bar bg-success" style="width: 90%"></div>
                            </div>

                        }
                    </td>
                    <td>
                        @if (x.sayi >= 1 && x.sayi <= 3)
                        {
                            <span class="badge bg-danger">@x.sayi</span>}
                        @if (x.sayi >= 4 && x.sayi <= 6)
                        {
                            <span class="badge bg-warning">@x.sayi</span>}
                        @if (x.sayi >= 7)
                        {
                            <span class="badge bg-success">@x.sayi</span>}

                    </td>
                </tr>
            }




        </tbody>
    </table>
</div>


