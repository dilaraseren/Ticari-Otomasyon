@model Ticari_Otomasyon.Models.Classes.Kategori
@{
    ViewBag.Title = "KategoriEkle";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<script src="~/Scripts/jquery-3.4.1.js"></script>
<br />
<h2>Yeni Kategori Sayfası</h2>
<br />
<form class="form-group" method="post">
    @Html.LabelFor(x=>x.KategoriAdi)
    @Html.TextBoxFor(x=>x.KategoriAdi,new {@class="form-control"})

    <br />
    <button class="btn btn-warning" id="Btn1">Kaydet</button>
    <script>
        $('#Btn1').click(function (){
            alert("Kategori başarılı bir şekilde eklendi. ")
        });
    </script>
</form>

